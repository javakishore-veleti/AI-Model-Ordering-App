@page "/customers-bootstrap/delete/{Id:long}"
@namespace app_blazor.Pages.Customers_Bootstrap
@using AIModelOrderingApp.Models.Entities
@inject HttpClient Http
@inject NavigationManager Nav

<div class="container mt-4">
    <h2 class="text-danger">Delete Customer (Bootstrap)</h2>

    @if (customer == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <div class="alert alert-danger shadow-sm">
            <h5>Are you sure you want to delete this customer?</h5>
            <p><strong>Name:</strong> @customer.Name</p>
            <p><strong>Email:</strong> @customer.Email</p>
            <p><strong>Phone:</strong> @customer.Phone</p>

            <button class="btn btn-danger" @onclick="Delete">Yes, Delete</button>
            <button class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
        </div>
    }
</div>

@code {
    [Parameter] public long Id { get; set; }
    Customer? customer;

    protected override async Task OnInitializedAsync()
    {
        customer = await Http.GetFromJsonAsync<Customer>($"/api/customers/{Id}");
    }

    private async Task Delete()
    {
        await Http.DeleteAsync($"/api/customers/{Id}");
        Nav.NavigateTo("/customers-bootstrap");
    }

    private void Cancel() => Nav.NavigateTo("/customers-bootstrap");
}
