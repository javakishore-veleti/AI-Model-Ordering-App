@page "/customers-bootstrap/delete/{Id:long}"
@namespace app_blazor.Pages.Customers_Bootstrap
@using AIModelOrderingApp.Models.Entities
@inject HttpClient Http
@inject NavigationManager Nav
@inject ToastService ToastService

<h3>Delete Customer</h3>

@if (customer == null)
{
    <p>Loading...</p>
}
else
{
    <div class="alert alert-danger">
        Are you sure you want to delete <strong>@customer.Name</strong>?
    </div>

    <button class="btn btn-danger" @onclick="Delete">Yes, Delete</button>
    <button class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
}

@code {
    [Parameter] public long Id { get; set; }

    private Customer? customer;

    protected override async Task OnInitializedAsync()
    {
        customer = await Http.GetFromJsonAsync<Customer>($"/api/customers/{Id}");
    }

    private async Task Delete()
    {
        var result = await Http.DeleteAsync($"/api/customers/{Id}");

        if (result.IsSuccessStatusCode)
        {
            ToastService.ShowSuccess("Customer deleted.");
            Nav.NavigateTo("/customers-bootstrap");
        }
        else
        {
            ToastService.ShowError("Delete failed.");
        }
    }

    private void Cancel() => Nav.NavigateTo("/customers-bootstrap");
}
