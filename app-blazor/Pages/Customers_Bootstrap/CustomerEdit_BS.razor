@page "/customers-bootstrap/edit/{Id:long}"
@namespace app_blazor.Pages.Customers_Bootstrap
@using AIModelOrderingApp.Models.Entities
@inject HttpClient Http
@inject NavigationManager Nav

<div class="container mt-4">
    <h2>Edit Customer (Bootstrap)</h2>

    @if (customer == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <CustomerForm_BS Customer="customer" OnSubmit="Save" />
    }
</div>

@code {
    [Parameter] public long Id { get; set; }
    Customer? customer;

    protected override async Task OnInitializedAsync()
    {
        customer = await Http.GetFromJsonAsync<Customer>($"/api/customers/{Id}");
    }

    private async Task Save()
    {
        await Http.PutAsJsonAsync($"/api/customers/{Id}", customer);
        Nav.NavigateTo("/customers-bootstrap");
    }
}
