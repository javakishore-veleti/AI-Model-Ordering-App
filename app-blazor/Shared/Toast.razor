@inject ToastService ToastService

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 2000">
    @if (visible)
    {
        <div class="toast show align-items-center text-bg-@type border-0">
            <div class="d-flex">
                <div class="toast-body">
                    <strong>@title:</strong> @message
                </div>
                <button class="btn-close btn-close-white me-2 m-auto" @onclick="Hide"></button>
            </div>
        </div>
    }
</div>

@code {
    private bool visible = false;
    private string type = "success";
    private string title = "";
    private string message = "";

    protected override void OnInitialized()
    {
        ToastService.OnShow += Show;
    }

    private void Show(string type, string title, string message)
    {
        this.type = type;
        this.title = title;
        this.message = message;
        visible = true;
        StateHasChanged();

        Task.Delay(3000).ContinueWith(_ =>
        {
            visible = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private void Hide()
    {
        visible = false;
    }
}
